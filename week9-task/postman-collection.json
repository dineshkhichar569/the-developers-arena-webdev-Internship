{
  "info": {
    "name": "Week 9 Blog API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "url": "http://localhost:3000/api/health"
      }
    },
    {
      "name": "Get Posts",
      "request": {
        "method": "GET",
        "url": "http://localhost:3000/api/posts"
      }
    },
    {
      "name": "Create Post",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer YOUR_JWT_TOKEN"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{ \"title\": \"My Post\", \"content\": \"Post content\" }"
        },
        "url": "http://localhost:3000/api/posts"
      }
    }
  ]
}
